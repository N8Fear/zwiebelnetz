# /etc/init.d/secsocnet

# Carry out specific functions when asked to by the system
case "$1" in
  start)
    echo "Starting zwiebelnetz wizard"
    cd /home/pi/secsocnet/wizard
    /home/pi/secsocnet/wizard/wizard &
    ;;
  stop)
    echo "Stopping zwiebelnetz wizard"
    killall -9 wizard 2>/dev/null
    ;;
  *)
    echo "Usage: /etc/init.d/secsocnet {start|stop}"
    exit 1
    ;;
esac

exit 0
